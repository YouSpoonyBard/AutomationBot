pipeline {
    agent any
    environment {
        CONFIG = credentials('config.json')
    }
    stages {
        stage('Initial pipeline test') { 
            steps {
                sh "pwd"
                sh "whoami"
                echo "hello world"
            }
        }
        stage('Build') {
            steps {
                sh "echo $CONFIG > config.json"
                sh "cat config.json"
                sh "node mybot.js"
            }
        }
    }
}