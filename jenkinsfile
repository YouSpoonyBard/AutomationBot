pipeline {
    agent any
    environment {
        dsToken = credentials('dsToken')
        yttoken = credentials('yttoken')
        prefix = '/'
    }
    stages {
        stage('Initial pipeline test') { 
            steps {
                sh "pwd"
                sh "whoami"
                echo "hello world"
            }
        }
        stage('Build') {
            steps {
                sh ''' echo ' {
                        \"token\" : \\" \$dsToken \\",
                        \"yttoken\" : \\" \$yttoken \\",
                        \"prefix\" : \\" \$prefix \\"
                } ' > config.json 
                '''
                sh "node mybot.js"
            }
        }
    }
}